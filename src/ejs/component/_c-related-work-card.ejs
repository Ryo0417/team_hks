<li class="c-related-work-card">
  <a href="#!" class="c-related-work-card__link">
    <div class="c-related-work-card__img">
      <img src="<%= src %>" alt="<%= alt %>">
    </div>
    <div class="c-related-work-card__text">
      <h2 class="c-related-work-card__title"><%= title %></h2>
      <p class="c-related-work-card__excerpt u-mobile"><%= excerpt %></p>
    </div>
    <div class="c-related-work-card__info">
      <span class="c-related-work-card__category"><%= category %></span>
      <time datetime="<%= datetime %>" class="c-related-work-card__date"><%= time %></time>
    </div>
  </a>
</li>