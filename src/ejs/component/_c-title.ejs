<!-- 各セクションに以下のコメントアウトを記述 -->
<%#
  var localmeta = {
    jaTitle: 'ほげ',
    enTitle: 'hoge'
  };
%>

<div class="c-title">
  <h2 class="c-title__ja"><%= meta.jaTitle %></h2>
  <% if (meta.enTitle == 'works' || meta.enTitle == 'blog') { %>
    <p class="c-title__en c-title__en--right"><%= meta.enTitle %></p>
  <% } else if (meta.enTitle == 'Contact') { %>
    <p class="c-title__en c-title__en--contact"><%= meta.enTitle %></p>
  <% } else { %>
    <p class="c-title__en c-title__en--left"><%= meta.enTitle %></p>
  <% } %>
</div>