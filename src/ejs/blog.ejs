<!DOCTYPE html>
<html lang="ja">
  <%- include('./common/_head') %>
  <body>
    <% var location = {page_id:'blog'} %>

    <!-- ヘッダー -->
    <header class="l-header">
      <%- include('./common/_p-header') %>
    </header>

    <!-- 下層ファーストビュー -->
    <%- include('./project/_p-sub-fv', {page: location}) %>
    
    <!-- ブログセクション -->
    <section class="p-sub-blog l-sub-blog">
      <div class="p-sub-blog__inner l-inner">
        <!-- パンくずリスト -->
        <div class="p-sub-blog__breadcrumb">
          <%-include('./component/_c-breadcrumb',{
            categoryName:'ブログ記事一覧',
            postName:'',
            src:'blog.html'
            })
          %>
        </div>
        <!-- カテゴリーリスト -->
        <div class="p-sub-blog__category">
          <%- include('./component/_c-category-list') %>
        </div>
        <!-- ブログリスト -->
        <div class="p-sub-blog__list">
          <%- include('./project/_p-sub-blog-cards', {page: location}) %>
        </div>
        <!-- ページネーション -->
        <div class="p-sub-blog__pagination">
          <%- include('./component/_c-pagination') %>
        </div>
      </div>
    </section>

    <!-- お問い合わせ -->
    <section class="l-common-contact">
      <%- include('./project/_p-common-contact') %>
    </section>

    <!-- フッター -->
    <%- include('./common/_p-footer') %>

    <!-- ページトップ -->
    <%- include('./component/_c-pagetop') %>
  </body>
</html>
