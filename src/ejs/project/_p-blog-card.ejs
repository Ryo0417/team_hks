<!-- 以下をindex.ejsに記述、singleページに使うときはpage_idの中身とincludeのファイル名変える -->
<%# var location = {page_id:'top'} %>
<%#- include('./project/_p-top-blog-cards', {page: location}) %>


<% if (page.page_id == 'single-blog') { %>
<li class="p-blog-card">
  <div class="p-related-blog-cards__item">
    <a href="#" class="p-blog-card__link">
      <div class="p-blog-card__img">
        <img src="<%= src %>" alt="<%= alt %>" />
      </div>
      <div class="p-blog-card__textbox">
        <h3 class="p-blog-card__title"><%= title %></h3>
        <p class="p-blog-card__text"><%= text %></p>
      </div>
      <div class="p-blog-card__meta">
        <span class="p-blog-card__category"><%= category %></span>
        <time class="p-blog-card__time" datetime="2021-07-20"><%= time %></time>
      </div>
    </a>
  </div>
</li>
<% } else { %>
<li class="p-blog-card">
  <div class="p-top-blog-cards__item">
    <a href="#" class="p-blog-card__link">
      <div class="p-blog-card__img">
        <img src="<%= src %>" alt="<%= alt %>" />
      </div>
      <div class="p-blog-card__textbox">
        <h3 class="p-blog-card__title"><%= title %></h3>
        <p class="p-blog-card__text"><%= text %></p>
      </div>
      <div class="p-blog-card__meta">
        <span class="p-blog-card__category"><%= category %></span>
        <time class="p-blog-card__time" datetime="2021-07-20"><%= time %></time>
      </div>
    </a>
  </div>
</li>
<% } %>
