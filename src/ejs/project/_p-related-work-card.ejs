<li class="p-related-work-card">
  <a href="#!" class="p-related-work-card__link">
    <div class="p-related-work-card__img">
      <img src="<%= src %>" alt="<%= alt %>">
    </div>
    <div class="p-related-work-card__text">
      <h2 class="p-related-work-card__title"><%= title %></h2>
      <p class="p-related-work-card__excerpt u-mobile"><%= excerpt %></p>
    </div>
    <div class="p-related-work-card__info">
      <span class="p-related-work-card__category"><%= category %></span>
      <time datetime="<%= datetime %>" class="p-related-work-card__date"><%= time %></time>
    </div>
  </a>
</li>